        "responses": {
          "200": {
            "description": "Successful Operation"
          },
          "400": {
            "description": "Too many thresholds supplied"
          },
          "500": {
            "description": "Internal error setting thresholds"
          }
        },
        "x-pmlPermissions": [
          "config:update"
        ]
      }
    },
    "/local-storage/volumes": {
      "get": {
        "tags": [
          "Storage Volumes"
        ],
